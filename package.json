{
  "name": "buenhyden-blog",
  "description": "Hyden's Dev Story",
  "scripts": {
    "dev": "hugo server --gc --disableFastRender --enableGitInfo -D",
    "prod": "hugo server --gc --disableFastRender --enableGitInfo -D --renderToDisk --minify -e production",
    "build": "hugo --gc -D --minify --enableGitInfo",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buenhyden/buenhyden-blog.git"
  },
  "author": "Hyunyoun Jo <chochyjj@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buenhyden/buenhyden-blog/issues"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-yaml": "^0.5.0",
    "eslint-plugin-yml": "^1.10.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.2",
    "markdownlint": "^0.31.1",
    "markdownlint-cli": "^0.37.0",
    "postcss-cli": "^10.1.0",
    "prettier": "3.0.3",
    "prettier-eslint": "^16.1.2",
    "rtlcss": "^4.1.1"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.md": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.yml": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  }
}
